        static fun listFolder(prefix: String, folder: Folder) {
            ("list folder " + prefix + folder.file.filename).println()
            var files = folder.file.listFiles()
            var i = 0
            while(i < files.length()) {
                var f = files[i]
                (prefix + f.filename).println()
                if (f.isDirectory()) {
                    Startup.listFolder(prefix + "-", f)
                }
                i++
            }
        }
