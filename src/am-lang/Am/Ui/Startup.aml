        static fun listFolderInViewGroup(win: Window, vg: ViewGroup, folder: Folder) {
            var list = folder.file.listFiles()
            vg.removeChildren()
            var i = 0
            var len = list.length()

            if (folder.parent != null) {
                var b = new Button("..", (v) => {
                    Startup.listFolderInViewGroup(win, vg, folder.parent)
                    win.layout()
                    win.requestRepaint()
                    return true
                })

                b.setup((v) => {
                    v.setDefaultPadding()
                    v.growX = 255UB
                    v.growY = 0UB
                })

                vg.addChild(b)
            }

            while(i < len) {
                var file = list[i]
                i++

                var b = new Button(file.getName(), (v) => {
                    var f2 = file
                    var w2 = win

                    if (f2.isDirectory()) {
                        Startup.listFolderInViewGroup(w2, vg, new Folder(f2, folder))
                        w2.layout()
                        w2.requestRepaint()
                    }
                    return true
                })

                b.setup((v) => {
                    v.setDefaultPadding()
                    var w2 = win
                    v.growX = 255UB
                    v.growY = 0UB
                })

                vg.addChild(b)
            }
        }

